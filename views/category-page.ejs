            name="msapplication-TileImage"
            content="./assets/favicon/ms-icon-144x144.png"
        />
        <meta name="theme-color" content="#ffffff" />

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Poppins:wght@400;500;600;700&family=Roboto+Serif:opsz,wght@8..144,400;8..144,500;8..144,600&display=swap"
            rel="stylesheet"
        />

        <!-- Font Awesome 5 -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
            integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
        />
    </head>
    <body>
        <!-- navbar-->
        <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary" >
            <div class="container-lg" style="position: relative;">
                <a class="navbar-brand d-flex align-items-center" href="/customer/homepage">
                    <img class="pe-2" src="/images/customer/logo-1.png" width="60" height="50" alt="">
                    <div class="ps-2" style="font-family: 'Dancing Script', cursive;">
                        <h2>Aladin</h2>
                    </div>
                </a>
                <div class="hamburger">
                    <ul class="navbar-nav me-auto ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#hot">Hot</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="#categories">
                            <%=category%>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">Footer</a>
                    </li>
                    </ul>
                </div>
                <div class="nav-item d-flex justify-content-center align-items-center">
                    <div class="option ms-3">
                        <div class="group">
                            <svg class="icon" aria-hidden="true" viewBox="0 0 24 24"><g><path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path></g></svg>
                            <input placeholder="Search" type="search" class="input">
                          </div>
                    </div>
                    <div class="option ms-2">
                        <div class="nav-item dropdown">
                            <a
                                href="#"
                                class="nav-link dropdown-toggle"
                                data-bs-toggle="dropdown"
                            >
                                <img
                                    class="rounded-circle me-lg-2"
                                    src="/images/cuong.jpg"
                                    alt=""
                                    style="width: 40px; height: 40px"
                                />
                            </a>
                            <div
                                class="dropdown-menu dropdown-menu-end border-0 rounded-0 rounded-bottom m-0"
                            >
                                <a href="#" class="dropdown-item">My Profile</a>
                                <hr class="dropdown-divider" />
                                <a href="#" class="dropdown-item">Log Out</a>
                            </div>
                        </div>
                    </div>
                    <div class="option ms-3 me-2">
                        <a href="../static-website-material/views/cart.html">
                            <i class="fa-solid fa-bag-shopping"></i>
                        </a>
                    </div>
                    <button class="navbar-toggler"  type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </div>
        </nav>


        <!-- banner -->
        <section id="banner">
            <div class="banner container-lg">
                <div class="row " style="position: relative;">
                    <div>
                        <% if (category === "Beauty Cosmetic") {%>
                            <img class="img-fluid" src="/images/customer/banner-category2.png" alt="<%= category%>">
                        <% } else if (category === "Fashion") { %>
                            <img class="img-fluid" src="/images/customer/banner-category.png" alt="<%= category%>">
                        <% }  else if (category === "Electronics") { %>
                            <img class="img-fluid" src="/images/customer/banner-category3.png" alt="<%= category%>">
                        <% }  else if (category === "Sports & Outdoors") { %>
                            <img class="img-fluid" src="/images/customer/banner-category4.png" alt="<%= category%>">
                        <% }   else if (category === "Home & Kitchen") { %>
                            <img class="img-fluid" src="/images/customer/banner-category5.png" alt="<%= category%>">
                        <% }   else { %>
                            <img class="img-fluid" src="/images/customer/banner-category6.png" alt="<%= category%>">
                        <% } %>  
                    </div>
                    <div class="title d-flex justify-content-center" style="position: absolute ">
                        <h2><%=category%></h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- breadcrmub -->
        <div class="container">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a style="text-decoration: none;" href="../index.html">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Clothes</li>
            </ol>
          </nav>
        </div>
        <!-- HOT -->
        <section id="hot">
            <div class="container-lg rec-box py-1 my-4">
                <h1>
                    PRODUCT
                </h1>
                <div class="row product my-5">
                    <div class="group-by">
                        <span>Filter: </span> 
                        <div class="dropdown ms-2">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                              Price
                            </button>
                            <ul class="dropdown-menu">
                              <li><a class="dropdown-item" href="#">High to Low</a></li>
                              <li><a class="dropdown-item" href="#">Low to High</a></li>
                            </ul>
                          </div>
                    </div>

                    <%products.forEach((product) => {%>
                        <div class="col-lg-4 col-md-6 col-ms-12 my-3 d-flex product-col" >
                            <a href="/customer/products/<%=product.id%>" style="text-decoration: none; color: black">
                                <div class="product-card ms-2" style="position: relative" >
                                    <div class="product-image border shadow">
                                        <img src="/images/customer/<%=product.image%>" class="project-thumb" width="300px" height="302px" alt="<%=product.name%>"   />   
                                        <div class="overlay product-effect" style="position: absolute">
                                            <div class="p-3 d-flex justify-content-center w-100" >
                                                ADD TO CART
                                            </div>      
                                        </div>
                                    </div>
                                    <div class="product-info d-flex pt-3 align-items-center flex-column">
                                        <h3><%=product.name%></h3>
                                        <p class="mb-0"><%=product.price%>$</p>
                                    </div>    
                                </div>            
                            </a>
                        </div>
                    <%})%>           
                </div>
            </div>
        </section>
        <%- include ('partials/footer-customer')%>
        <!-- JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"
        ></script>
        <script src="/js/category.js"></script>
    </body>
</html>
