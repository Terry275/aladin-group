    <body>
        <!-- navbar-->
        <nav class="navbar fixed-top navbar-expand-md bg-body-tertiary" >
            <div class="container-lg" style="position: relative;">
                <a class="navbar-brand d-flex align-items-center" href="/customer/homepage">
                    <img class="pe-2" src="/images/customer/logo-1.png" width="60" height="50" alt="">
                    <div class="ps-2" style="font-family: 'Dancing Script', cursive;">
                        <h2>Aladin</h2>                        
                    </div>
                </a>
                <div class="hamburger">
                    <ul class="navbar-nav me-auto ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#hot">Hot</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link">
                            Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">Footer</a>
                    </li>
                    </ul>
                </div>
                <div class="nav-item d-flex justify-content-center align-items-center">
                    <div class="option ms-3">
                        <div class="group">
                            <svg class="icon" aria-hidden="true" viewBox="0 0 24 24"><g><path d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z"></path></g></svg>
                            <input placeholder="Search" type="search" class="input">
                          </div>
                    </div>
                    <div class="option ms-2">
                        <div class="nav-item dropdown">
                            <a
                                href="#"
                                class="nav-link dropdown-toggle"
                                data-bs-toggle="dropdown"
                            >
                                <img
                                    class="rounded-circle me-lg-2"
                                    src="/images/cuong.jpg"
                                    alt=""
                                    style="width: 40px; height: 40px"
                                />
                            </a>
                            <div
                                class="dropdown-menu dropdown-menu-end border-0 rounded-0 rounded-bottom m-0"
                            >
                                <a href="#" class="dropdown-item">My Profile</a>
                                <a href="#" class="dropdown-item">Settings</a>
                                <hr class="dropdown-divider" />
                                <a href="#" class="dropdown-item">Log Out</a>
                            </div>
                        </div>
                    </div>
                    <div class="option ms-3 me-2">
                        <a href="/homepage/shopping-cart">
                            <i class="fa-solid fa-bag-shopping"></i>
                        </a>
                    </div>
                    <button class="navbar-toggler"  type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </div>
        </nav>
        <!-- main -->
        <section id="product-detail" style="background-color: rgba(253, 202, 108, 0.498);" >
            <div class="container-lg py-5 mt-5">
                <div class="products-container row my-5" style=" border-radius: 5px; ">
                    <div class="item col-lg-6 d-flex flex-column py-3">
                        <div class="col-lg-12 ">
                            <img class="img-fluid" width="100%" src="/images/customer/<%=product.image%>" alt="">
                        </div>
                    </div>
                    <div class="item col-lg-6 py-3">
                        <div class="disc">
                            <div class="title">
                                <h3><%=product.name%></h3>
                            </div>
                            <div class="rating d-flex align-items-center ">
                                <div class="item ">⭐⭐⭐⭐</div>
                                <div class="item ms-2 ps-2 border-black border-start">ratings</div>
                                <div class="item ms-2 ps-2 border-black border-start">sold</div>
                            </div>
                            <div class="buy-option">
                                <div class="item price p-3 ">
                                    <%=product.price%>$
                                </div>
                                <div class="item d-flex">
                                    <h5> Distribution hub: </h5>
                                    <p class="ms-3">bla bla bla</p>
                                </div>
                                <div class="item">
                                    <div class="product-desc">
                                        <h5>Product Description</h5>
                                        <p><%=product.description%></p>
                                    </div>
                                </div>
                                <div class="item quantity d-flex">
                                    <h5>Quantity: </h5>
                                    <div class="quantity-control d-flex ms-3">
                                        <div class="box">
                                            <span class="minus border-end px-2" style="cursor: pointer;">-</span>
                                        </div>
                                        <div class="box px-2">
                                            <span class="num">01</span>
                                        </div>
                                        <div class="box">
                                            <span class="plus border-start px-2" style="cursor: pointer;">+</span>
                                        </div>
                                    </div>

                                </div>
                                <div class="item">
                                    <button type="button" class="btn add-cart">Add to Cart</button>
                                    <input class="btn" type="button" value="Buy Now">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include ('partials/footer-customer')%>

        <!-- JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
